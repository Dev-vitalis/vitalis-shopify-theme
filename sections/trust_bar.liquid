{% style %}
  .trust-bar { background: var(--color-bg-white); padding: 0.85rem 1rem; border-bottom: 1px solid rgba(0,0,0,.06); }
  .trust-bar__inner { display: flex; flex-wrap: wrap; justify-content: center; align-items: center; gap: 1.5rem 2rem; max-width: 1200px; margin: 0 auto; font-size: 0.85rem; font-weight: 600; color: var(--color-text); text-transform: uppercase; letter-spacing: 0.02em; }
  .trust-bar__item { white-space: nowrap; }
  @media (max-width: 768px) { .trust-bar__inner { gap: 0.75rem 1.25rem; font-size: 0.8rem; } }
{% endstyle %}

<section class="trust-bar">
  <div class="trust-bar__inner container">
    <span class="trust-bar__item">{{ section.settings.item_1 | default: 'Envíos gratis' }}</span>
    <span class="trust-bar__item">{{ section.settings.item_2 | default: 'Satisfacción garantizada' }}</span>
    <span class="trust-bar__item">{{ section.settings.item_3 | default: 'Soporte 24/7' }}</span>
    <span class="trust-bar__item">{{ section.settings.item_4 | default: 'Pagas en efectivo' }}</span>
    <span class="trust-bar__item">{{ section.settings.item_5 | default: '5.000+ clientes satisfechos' }}</span>
  </div>
</section>

{% schema %}
{
  "name": "Barra benefícios (estilo Nutrijema)",
  "settings": [
    { "type": "text", "id": "item_1", "label": "Beneficio 1", "default": "Envíos gratis" },
    { "type": "text", "id": "item_2", "label": "Beneficio 2", "default": "Satisfacción garantizada" },
    { "type": "text", "id": "item_3", "label": "Beneficio 3", "default": "Soporte 24/7" },
    { "type": "text", "id": "item_4", "label": "Beneficio 4", "default": "Pagas en efectivo" },
    { "type": "text", "id": "item_5", "label": "Beneficio 5", "default": "5.000+ clientes satisfechos" }
  ]
}
{% endschema %}
