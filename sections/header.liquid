{% style %}
  .header-top { background: var(--color-primary); color: #fff; padding: 0.4rem 1rem; text-align: center; font-size: 0.8rem; }
  .header-main { background: var(--color-bg-white); box-shadow: 0 1px 0 rgba(0,0,0,.06); }
  .header-inner { display: flex; align-items: center; justify-content: space-between; padding: 0.9rem 1.25rem; max-width: 1200px; margin: 0 auto; }
  .header-logo { font-family: var(--font-heading); font-weight: 700; font-size: 1.5rem; color: var(--color-primary); letter-spacing: 0.02em; }
  .header-logo:hover { text-decoration: none; color: var(--color-primary-light); }
  .header-nav { display: flex; gap: 1.5rem; align-items: center; }
  .header-nav a { color: var(--color-text); font-weight: 500; font-size: 0.95rem; }
  .header-nav a:hover { color: var(--color-primary-light); }
  .header-cart { display: inline-flex; align-items: center; gap: 0.35rem; padding: 0.5rem 0.9rem; background: var(--color-bg); border-radius: var(--radius); font-weight: 600; color: var(--color-text); }
  .header-cart:hover { background: var(--color-primary-light); color: #fff; text-decoration: none; }
  @media (max-width: 768px) {
    .header-nav .header-nav--hide-mobile { display: none; }
  }
{% endstyle %}

<div class="header-top">
  <div class="container">{{ section.settings.top_text | default: 'Crédito con Addi · Pago contra entrega · Pagos 100% seguros' }}</div>
</div>
<header class="header-main">
  <div class="header-inner container">
    <a href="/" class="header-logo">{{ shop.name }}</a>
    <nav class="header-nav">
      <a href="/" class="header-nav--hide-mobile">Inicio</a>
      <a href="/collections/all" class="header-nav--hide-mobile">Productos</a>
      <a href="/search" class="header-nav--hide-mobile">Búsqueda</a>
      <a href="/account">Iniciar sesión</a>
      <a href="/cart" class="header-cart">Carrito ({{ cart.item_count }})</a>
    </nav>
  </div>
</header>

{% schema %}
{
  "name": "Encabezado",
  "settings": [
    { "type": "text", "id": "top_text", "label": "Texto barra superior", "default": "Crédito con Addi · Pago contra entrega · Pagos 100% seguros" }
  ]
}
{% endschema %}
