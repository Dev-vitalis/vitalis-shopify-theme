{% style %}
  .footer { background: var(--color-primary); color: #fff; padding: 2.5rem 1rem 1.5rem; }
  .footer a { color: rgba(255,255,255,.9); }
  .footer a:hover { color: #fff; text-decoration: none; }
  .footer__grid { display: grid; grid-template-columns: 1fr 1fr 1fr; gap: 2rem; max-width: 1200px; margin: 0 auto 2rem; }
  .footer__col h4 { font-family: var(--font-heading); font-size: 1rem; font-weight: 600; margin: 0 0 0.75rem; }
  .footer__col ul { list-style: none; padding: 0; margin: 0; }
  .footer__col li { margin-bottom: 0.4rem; }
  .footer__bottom { text-align: center; padding-top: 1.5rem; border-top: 1px solid rgba(255,255,255,.2); font-size: 0.9rem; opacity: .9; }
  @media (max-width: 600px) { .footer__grid { grid-template-columns: 1fr; text-align: center; } }
{% endstyle %}

<footer class="footer">
  <div class="footer__grid container">
    <div class="footer__col">
      <h4>{{ shop.name }}</h4>
      <p style="margin:0;opacity:.9;font-size:0.95rem;">Productos de salud y bienestar para toda Colombia.</p>
    </div>
    <div class="footer__col">
      <h4>Enlaces</h4>
      <ul>
        <li><a href="/">Inicio</a></li>
        <li><a href="/collections/all">Productos</a></li>
        <li><a href="/cart">Carrito</a></li>
        {% if shop.policies.refund_policy %}<li><a href="/policies/refund-policy">Política de reembolsos</a></li>{% endif %}
        {% if shop.policies.privacy_policy %}<li><a href="/policies/privacy-policy">Privacidad</a></li>{% endif %}
      </ul>
    </div>
    <div class="footer__col">
      <h4>Compra con confianza</h4>
      <p style="margin:0;opacity:.9;font-size:0.95rem;">Envío gratis en pedidos seleccionados · Pago contra entrega</p>
    </div>
  </div>
  <div class="footer__bottom">
    <p style="margin:0;">© {{ 'now' | date: '%Y' }} {{ shop.name }}. Todos los derechos reservados.</p>
  </div>
</footer>

{% schema %}
{
  "name": "Pie de página",
  "settings": []
}
{% endschema %}
