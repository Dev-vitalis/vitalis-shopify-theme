    { "type": "text", "id": "title", "label": "T칤tulo", "default": "De una crisis a una misi칩n de vida" },
    { "type": "textarea", "id": "body", "label": "Texto (soporta saltos de l칤nea)" },
    { "type": "text", "id": "stat_number", "label": "N칰mero destacado", "default": "7.500+" },
    { "type": "text", "id": "stat_label", "label": "Etiqueta del n칰mero", "default": "personas han transformado su bienestar con nosotros" },
