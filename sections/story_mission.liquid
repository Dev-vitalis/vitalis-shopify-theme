{% style %}
  .story { padding: 3.5rem 0; background: var(--color-bg-white); }
  .story__inner { max-width: 720px; margin: 0 auto; }
  .story__title { font-family: var(--font-heading); font-size: clamp(1.25rem, 2.5vw, 1.5rem); font-weight: 700; text-align: center; margin: 0 0 1.5rem; color: var(--color-text); text-transform: uppercase; letter-spacing: 0.03em; }
  .story__text { color: var(--color-text); line-height: 1.75; margin-bottom: 1rem; white-space: pre-line; }
  .story__stat { text-align: center; font-family: var(--font-heading); font-size: 1.75rem; font-weight: 700; color: var(--color-primary-light); margin: 1.5rem 0 0.25rem; }
  .story__stat-label { text-align: center; color: var(--color-text-muted); font-size: 0.95rem; margin-bottom: 1.5rem; }
  .story__values { list-style: none; padding: 0; margin: 1rem 0 1.5rem; }
  .story__values li { padding: 0.35rem 0; display: flex; align-items: center; gap: 0.5rem; }
  .story__cta { text-align: center; margin-top: 1.5rem; }
{% endstyle %}

<section class="story section">
  <div class="container">
    <div class="story__inner">
      <h2 class="story__title">{{ section.settings.title | default: 'De una crisis a una misi칩n de vida' }}</h2>
      <div class="story__text">{{ section.settings.body | default: "Creemos en la transparencia, en la calidad y en hacer del bienestar una prioridad.\n\nHoy, miles de personas conf칤an en nuestros productos para sentirse mejor cada d칤a." }}</div>
      {% if section.settings.stat_number != blank %}
        <p class="story__stat">{{ section.settings.stat_number }}</p>
        <p class="story__stat-label">{{ section.settings.stat_label | default: 'personas han transformado su bienestar con nosotros' }}</p>
      {% endif %}
      {% if section.settings.value_1 != blank or section.settings.value_2 != blank or section.settings.value_3 != blank %}
        <ul class="story__values">
          {% if section.settings.value_1 != blank %}<li>游눜 {{ section.settings.value_1 }}</li>{% endif %}
          {% if section.settings.value_2 != blank %}<li>游눜 {{ section.settings.value_2 }}</li>{% endif %}
          {% if section.settings.value_3 != blank %}<li>游눜 {{ section.settings.value_3 }}</li>{% endif %}
        </ul>
      {% endif %}
      {% if section.settings.cta_text != blank and section.settings.cta_url != blank %}
        <div class="story__cta">
          <a href="{{ section.settings.cta_url }}" class="btn btn--primary">{{ section.settings.cta_text }}</a>
        </div>
      {% endif %}
    </div>
  </div>
</section>

